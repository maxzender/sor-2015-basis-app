<div class="page-header">
  <h2>New Concert</h2>
  <%= form_for @concert do |f| %>
      <div class="form-group">
        <%= f.label :artist %>
        <%= f.collection_select :artist_id, Artist.all, :id, :name, {}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :location %>
        <%= f.collection_select :location_id, Location.all, :id, :name, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :date %>
        <%= f.text_field(:date, class: "datepicker form-control") %>
      </div>

      <script type="text/javascript"><!-- from bootstrap-datepicker-rails Doc -->
        $(document).ready(function(){
          $('.datepicker').datepicker({
            format: "dd-mm-yyyy"
          });
        });
      </script>

      <div class="form-group">
        <%= f.submit "Speichern", class: "btn btn-default" %>
      </div>
  <% end %>
</div>
