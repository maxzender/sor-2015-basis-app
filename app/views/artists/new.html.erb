<div class="page-header">
  <h2>New Artist</h2>
</div>

<%= form_for @artist do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Artist", class: "btn btn-default" %>
  </div>
<% end %>
